<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorThemeDarkPrimary"
    android:orientation="vertical">

    <Button
        android:id="@+id/settings_back"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_white_back" />

    <!-- Section Title: NSFW -->
    <TextView
        android:id="@+id/settings_section_title_nsfw"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/colorBlack"
        android:text="Allow NSFW"
        android:textColor="@color/colorWhite" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp">

        <TextView
            android:id="@+id/settings_textview_nsfw"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="Allow NSFW posts"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/settings_checkbox_nsfw"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:buttonTint="@color/colorWhite"
            android:gravity="center|end" />
    </RelativeLayout>

    <!-- Section Title: Previews -->
    <TextView
        android:id="@+id/settings_section_title_previews"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/colorBlack"
        android:text="Previewing"
        android:textColor="@color/colorWhite" />

    <!-- Allow Images preview-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp">

        <TextView
            android:id="@+id/settings_textview_image_preview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="Preview submissions on long press"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/settings_checkbox_image_preview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:buttonTint="@color/colorWhite"
            android:gravity="center|end" />
    </RelativeLayout>

    <!-- Allow GIF preview-->
<!--    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp">

        <TextView
            android:id="@+id/settings_textview_gif_preview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="Preview GIFs on long press"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/settings_checkbox_gif_preview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:buttonTint="@color/colorWhite"
            android:gravity="center|end" />
    </RelativeLayout>-->

    <!-- Display large hover??-->
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/radio_group_preview_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|end"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_preview_size_option_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="Large"
            android:textColor="@color/colorWhite" />

        <RadioButton
            android:id="@+id/radio_preview_size_option_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="Small"
            android:textColor="@color/colorWhite" />
    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/settings_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="TEST settings_1"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/settings_checkbox_settings1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:buttonTint="@color/colorWhite"
            android:gravity="center|end" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/settings_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="TEST settings_2"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/settings_checkbox_settings2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:buttonTint="@color/colorWhite"
            android:gravity="center|end" />
    </RelativeLayout>
</LinearLayout>