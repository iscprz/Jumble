<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/full_displayer_comments_container"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_alignParentBottom="true"
    android:background="@color/colorBgBlackTint"
    android:orientation="vertical"
    android:visibility="invisible">
    <!-- Comments progress-->
    <ProgressBar
        android:id="@+id/full_displayer_comments_progress_bar"
        android:layout_width="@dimen/progress_bar_default"
        android:layout_height="@dimen/progress_bar_default"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/comments_collapse_bar"
        android:visibility="visible" />

    <ScrollView
        android:id="@+id/full_displayer_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/comments_button_close"
                android:layout_width="@dimen/comments_collapse_bar"
                android:layout_height="@dimen/comments_collapse_bar"
                android:layout_gravity="center"
                android:background="@drawable/ic_white_collapse_down"
                android:scaleType="fitXY"
                android:visibility="visible" />

            <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/full_displayer_comments_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical" />
            <!--android:nestedScrollingEnabled="false"-->
        </LinearLayout>

    </ScrollView>
</LinearLayout>