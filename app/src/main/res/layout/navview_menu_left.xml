<android.support.design.widget.NavigationView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_view_left"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/colorBgBlackTint"
    android:fitsSystemWindows="true"
    app:headerLayout="@layout/navview_left_header">

    <ExpandableListView
        android:id="@+id/expandable_list_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/navview_left_header_height"
        android:dividerHeight="@null"
        android:groupIndicator="@null" />

    <!-- Log out button-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:clickable="true">

        <TextView
            android:id="@+id/navbar_button_logout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="end"
            android:paddingRight="20dp"
            android:text="@string/log_out"
            android:textColor="@color/colorAccentBlue"
            android:textSize="20sp" />
    </FrameLayout>
</android.support.design.widget.NavigationView>