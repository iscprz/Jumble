<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Recyclerview -->
    <com.sometimestwo.moxie.MultiClickRecyclerView
        android:id="@+id/recycler_zoomie_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Large preview container that gets hidden/unhidden-->
    <RelativeLayout
        android:id="@+id/hover_view_container_large"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|top"
        android:visibility="gone">

        <TextView
            android:id="@+id/hover_view_title_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBgBlackTint"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/hover_view_large"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/hover_view_title_large"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:background="@color/colorBgBlackTint"
            android:scaleType="fitStart"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/container_exoplayer_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hover_view_title_large"
            android:background="@color/colorDarkThemeAccent">

            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/exoplayer_large"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBgBlackTint"
                app:player_layout_id="@layout/exo_player_view_preview_large"
                app:controller_layout_id="@layout/exo_playback_control_view_preview"
                app:use_controller="true"
                app:show_buffering="true"/>

        </FrameLayout>


    </RelativeLayout>


    <!-- Small preview container that gets hidden/unhidden-->
    <RelativeLayout
        android:id="@+id/hover_view_container_small"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_gravity="center|top"
        android:visibility="gone">

        <TextView
            android:id="@+id/hover_view_title_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBgBlackTint"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/hover_view_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hover_view_title_small"
            android:background="@color/colorDarkThemeAccent"
            android:visibility="visible" />
    </RelativeLayout>

</FrameLayout>