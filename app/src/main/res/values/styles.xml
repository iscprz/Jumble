<resources>

    <!-- Base application theme. -->
    <style name="AppThemeDark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorThemeDarkPrimary</item>
        <item name="colorPrimaryDark">@color/colorThemeDarkPrimaryDark</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/rainbow_bg_75_medium</item>
    </style>

    <style name="TransparentDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/colorDarkerGray</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ThemeNavViewHeader">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:background">@color/colorBlack</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:background">@color/colorBlack</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="toolbar_title_text_explore">
        <item name="android:textColor">@color/colorAccentBlue</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="toolbar_title_text_default">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="PopupTheme" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:itemBackground">@color/colorDarkerGray</item>
    </style>

    <style name="Theme.Settings.Checkbox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>

    <style name="AlertDialogDark" parent="@android:style/Theme.Dialog">
        <item name="android:background">@color/colorDarkerGray</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="android:textColorTertiary">#ffffff</item>
        <item name="android:textColorAlertDialogListItem">#ffffff</item>
        <item name="android:colorPrimary">#ffffff</item>
        <item name="android:colorForeground">#ffffff</item>
        <item name="android:color">#ffffff</item>
    </style>

</resources>
